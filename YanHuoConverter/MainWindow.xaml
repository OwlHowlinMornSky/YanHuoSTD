<Window x:Class="YanHuoConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YanHuoConverter"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <StackPanel>
        <TextBox x:Name="textBox1" MinWidth="300" MinHeight="150" AutomationProperties.HelpText="Enter Latin Content." />
        <StackPanel Orientation="Horizontal">
            <Button Click="Button_Click">Convert!</Button>
        </StackPanel>
        <TextBox x:Name="textBox2" MinWidth="800" MinHeight="300" IsReadOnly="True"/>
    </StackPanel>
</Window>
